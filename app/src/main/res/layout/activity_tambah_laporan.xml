<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tambah_laporan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.appkondisijalan.activity.TambahLaporanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/choosePicture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimary"
            android:src="@mipmap/choose_picture"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/inputLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="sedang mengambil lokasi ... "
            android:enabled="false"
            android:focusable="false"
            android:background="@drawable/background_edit_text"/>
        <Button
            android:id="@+id/btnLapor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporkan"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_button"/>

        <TextView
            android:id="@+id/txtLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>
